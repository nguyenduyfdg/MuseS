<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_margin">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_title"
            android:layout_centerHorizontal="true"
            android:id="@+id/txtMuseumName"
            android:layout_marginBottom="@dimen/activity_margin"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_header"
                android:id="@+id/txtOverview"
                android:layout_marginStart="@dimen/activity_main_margin"
                android:layout_marginLeft="@dimen/activity_main_margin"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_content"
                android:id="@+id/txtOverviewContent"/>
            <include layout="@layout/item_line"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_header"
                android:layout_marginStart="@dimen/activity_main_margin"
                android:layout_marginLeft="@dimen/activity_main_margin"
                android:textStyle="bold"
                android:id="@+id/txtAddress"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_content"
                android:id="@+id/txtAddressContent"/>
            <include layout="@layout/item_line"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_header"
                android:layout_marginStart="@dimen/activity_main_margin"
                android:layout_marginLeft="@dimen/activity_main_margin"
                android:textStyle="bold"
                android:id="@+id/txtContract"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_content"
                    android:id="@+id/txtContractContent"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_content"
                    android:gravity="end"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:id="@+id/txtContractValue"
                    android:autoLink="all"
                    android:linksClickable="true"
                    android:textColorLink="@color/colorPrimary"/>
            </RelativeLayout>
            <include layout="@layout/item_line"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_header"
                android:layout_marginStart="@dimen/activity_main_margin"
                android:layout_marginLeft="@dimen/activity_main_margin"
                android:textStyle="bold"
                android:id="@+id/txtTime"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_content"
                    android:id="@+id/txtTimeContent"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_content"
                    android:gravity="end"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:id="@+id/txtTimeValue" />
            </RelativeLayout>
            <include layout="@layout/item_line"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_main_margin"
                android:layout_marginLeft="@dimen/activity_main_margin"
                android:textSize="@dimen/text_header"
                android:textStyle="bold"
                android:id="@+id/txtTicket"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_content"
                    android:id="@+id/txtTicketContent"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_content"
                    android:gravity="end"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:id="@+id/txtTicketValue" />
            </RelativeLayout>
            <include layout="@layout/item_line"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
